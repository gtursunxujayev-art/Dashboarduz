{
  "name": "dashboarduz",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-Tenant CRM Integrator - AmoCRM, Telegram, Google Sheets, VoIP",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:all": "pnpm --parallel --filter api --filter web dev",
    "build": "pnpm -r build",
    "db:generate": "pnpm --filter db generate",
    "db:migrate": "pnpm --filter db migrate",
    "db:studio": "pnpm --filter db studio",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
