# ============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# Dashboarduz - Multi-Tenant CRM Integrator
# ============================================
# Copy this file to .env and fill in actual values
# For local development, you can use mock values or local services

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dashboarduz_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dashboarduz_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_SSL=false

# ============================================
# REDIS / QUEUE CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=dev-encryption-key-32-bytes-long

# ============================================
# OTP PROVIDER
# ============================================
OTP_PROVIDER=twilio
# For development, you can use Twilio test credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid
TWILIO_PHONE_NUMBER=

# Firebase OTP (alternative)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_SERVICE_ACCOUNT=

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# ============================================
# TELEGRAM
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ============================================
# AMOCRM
# ============================================
AMOCRM_CLIENT_ID=your-amocrm-client-id
AMOCRM_CLIENT_SECRET=your-amocrm-client-secret
AMOCRM_REDIRECT_URI=http://localhost:3001/api/integrations/amocrm/callback
AMOCRM_BASE_URL=https://www.amocrm.ru
AMOCRM_WEBHOOK_SECRET=your-amocrm-webhook-secret

# ============================================
# UTeL VoIP
# ============================================
UTEL_API_URL=https://api.utel.uz
UTEL_API_TOKEN=your-utel-api-token
UTEL_WEBHOOK_SECRET=your-utel-webhook-secret

# ============================================
# STORAGE (AWS S3 or compatible)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dashboarduz-dev-storage

# ============================================
# EMAIL SERVICE (SendGrid)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Dashboarduz

# ============================================
# SMS SERVICE (Twilio - for SMS notifications)
# ============================================
# Note: TWILIO_ACCOUNT_SID and TWILIO_AUTH_TOKEN are already defined above
TWILIO_SMS_FROM_NUMBER=

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOGGING_SERVICE_URL=

# ============================================
# API CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_FREE=100
RATE_LIMIT_MAX_REQUESTS_PRO=500
RATE_LIMIT_MAX_REQUESTS_ENTERPRISE=1000

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_EXPORTS_ENABLED=true
FEATURE_SYNC_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# ============================================
# SECRETS MANAGEMENT (Optional for dev)
# ============================================
SECRETS_PROVIDER=aws
# AWS Secrets Manager
# AWS_REGION is already defined above
# HashiCorp Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
