# ============================================
# STAGING ENVIRONMENT CONFIGURATION
# Dashboarduz - Multi-Tenant CRM Integrator
# ============================================
# Copy this file to .env.staging and fill in actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}
DB_HOST=your-staging-db-host.rds.amazonaws.com
DB_NAME=dashboarduz_staging
DB_USERNAME=dashboarduz_staging
DB_PASSWORD=${DB_PASSWORD_SECRET}
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_SSL=true

# ============================================
# REDIS / QUEUE CONFIGURATION
# ============================================
REDIS_URL=redis://${REDIS_HOST}:6379
REDIS_HOST=your-staging-redis.elasticache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD_SECRET}
REDIS_TLS=true

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=${JWT_SECRET_KEY}
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=${ENCRYPTION_KEY_SECRET}

# ============================================
# OTP PROVIDER
# ============================================
OTP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID_SECRET}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN_SECRET}
TWILIO_VERIFY_SERVICE_SID=${TWILIO_VERIFY_SERVICE_SID_SECRET}

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID_SECRET}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET_SECRET}
GOOGLE_REDIRECT_URI=https://api-staging.yourdomain.com/api/auth/google/callback

# ============================================
# TELEGRAM
# ============================================
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN_SECRET}

# ============================================
# AMOCRM
# ============================================
AMOCRM_CLIENT_ID=${AMOCRM_CLIENT_ID_SECRET}
AMOCRM_CLIENT_SECRET=${AMOCRM_CLIENT_SECRET_SECRET}
AMOCRM_REDIRECT_URI=https://api-staging.yourdomain.com/api/integrations/amocrm/callback
AMOCRM_BASE_URL=https://www.amocrm.ru

# ============================================
# UTeL VoIP
# ============================================
UTEL_API_URL=https://api.utel.uz
UTEL_API_TOKEN=${UTEL_API_TOKEN_SECRET}
UTEL_WEBHOOK_SECRET=${UTEL_WEBHOOK_SECRET_SECRET}

# ============================================
# STORAGE
# ============================================
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_SECRET}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_SECRET}
AWS_REGION=us-east-1
AWS_S3_BUCKET=dashboarduz-staging-storage

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=${SENTRY_DSN_SECRET}
SENTRY_ENVIRONMENT=staging
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# API CONFIGURATION
# ============================================
NODE_ENV=staging
PORT=3001
API_URL=https://api-staging.yourdomain.com
FRONTEND_URL=https://app-staging.yourdomain.com
CORS_ORIGIN=https://app-staging.yourdomain.com

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=https://api-staging.yourdomain.com
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN_SECRET}

# ============================================
# EMAIL SERVICE (SendGrid)
# ============================================
SENDGRID_API_KEY=${SENDGRID_API_KEY_SECRET}
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Dashboarduz

# ============================================
# SMS SERVICE (Twilio - for SMS notifications)
# ============================================
TWILIO_SMS_FROM_NUMBER=${TWILIO_PHONE_NUMBER_SECRET}

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_FREE=100
RATE_LIMIT_MAX_REQUESTS_PRO=500
RATE_LIMIT_MAX_REQUESTS_ENTERPRISE=1000

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_EXPORTS_ENABLED=true
FEATURE_SYNC_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# ============================================
# SECRETS MANAGEMENT
# ============================================
SECRETS_PROVIDER=aws
# AWS_REGION is already defined above
# HashiCorp Vault (if using)
VAULT_ADDR=https://vault-staging.yourdomain.com
VAULT_TOKEN=${VAULT_TOKEN_SECRET}
